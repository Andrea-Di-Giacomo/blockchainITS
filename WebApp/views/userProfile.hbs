<body>
<div class="register-photo">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-container">
                    <form method="post" action="users/password" id="changeForm">
                        <h2 class="text-center"><strong>Cambia Password</strong></h2>
                        <div class="form-group"><input type="password" id="password_vecchia" class="form-control" name="vecchia-psw" placeholder="Password corrente" /></div>
                        <div class="form-group"><input type="password" id="password" class="form-control" name="password" placeholder="Nuova password" /></div>
                        <div class="form-group"><input type="password" id="password2" class="form-control" name="password" placeholder="Reinserisci la password" oninput="check(this)"/></div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group"><button class="btn btn-dark btn-block" type="submit">Cambia password</button></div>
                            </div>
                            <div class="col">
                                <div class="form-group"><button class="btn btn-danger btn-block" type="button" id="deleteAcc">Cancella l'account</button></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
